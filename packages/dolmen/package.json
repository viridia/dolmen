{
  "name": "dolmen",
  "version": "0.0.1",
  "author": "Talin",
  "license": "MIT",
  "description": "A UI component library that works with Solid SSR",
  "scripts": {
    "build": "tsc --project tsconfig.mjs.json && tsc --project tsconfig.cjs.json",
    "build:svg": "svgr --template ./scripts/svg-template.cjs --typescript iconsrc/ -d src/icons/",
    "format": "prettier --write .",
    "test:compile": "tsc --noEmit --project ./tsconfig.json"
  },
  "source": "src/index.tsx",
  "main": "dist/cjs/index.jsx",
  "module": "dist/mjs/index.jsx",
  "types": "dist/mjs/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "solid": "./dist/mjs/index.jsx",
      "import": "./dist/mjs/index.jsx",
      "browser": "./dist/cjs/index.jsx",
      "require": "./dist/cjs/index.jsx",
      "node": "./dist/cjs/index.jsx"
    },
    "./icons": {
      "types": "./dist/mjs/icons/index.d.ts",
      "default": "./dist/mjs/icons/",
      "require": "./dist/cjs/icons/",
      "browser": "./dist/cjs/icons/",
      "solid": "./src/icons/"
    }
  },
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-typescript": "^9.0.1",
    "@stitches/core": "^1.2.8",
    "@svgr/cli": "^6.4.0",
    "acorn-jsx": "^5.3.2",
    "rollup": "^2.79.1",
    "rollup-preset-solid": "^1.4.0",
    "solid-codex-api": "^0.0.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "colord": "^2.9.3",
    "solid-js": "^1.5.7"
  },
  "engines": {
    "node": ">=16"
  }
}
