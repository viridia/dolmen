{
  "name": "dolmen",
  "version": "0.0.1",
  "author": "Talin",
  "license": "MIT",
  "description": "A UI component library that works with Solid SSR",
  "scripts": {
    "build": "rollup --config rollup.config.js src/index.ts",
    "build:svg": "svgr --template ./scripts/svg-template.cjs --typescript iconsrc/ -d src/icons/",
    "format": "prettier --write ."
  },
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/mjs/index.d.ts",
      "default": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js",
      "browser": "./dist/cjs/index.js",
      "solid": "./src/index.ts"
    },
    "./icons": {
      "types": "./dist/mjs/icons/index.d.ts",
      "default": "./dist/mjs/icons/",
      "require": "./dist/cjs/icons/",
      "browser": "./dist/cjs/icons/",
      "solid": "./src/icons/"
    }
  },
  "type": "module",
  "devDependencies": {
    "@svgr/cli": "^6.4.0",
    "@vanilla-extract/rollup-plugin": "^1.2.0",
    "@vanilla-extract/vite-plugin": "^3.6.1",
    "rollup": "^2.79.1",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-preset-solid": "^1.4.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@solidjs/router": "^0.4.3",
    "@vanilla-extract/css": "^1.9.1",
    "@vanilla-extract/recipes": "^0.2.5",
    "@vanilla-extract/sprinkles": "^1.5.0",
    "solid-js": "^1.5.7"
  },
  "engines": {
    "node": ">=16"
  }
}
