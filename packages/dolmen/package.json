{
  "name": "dolmen",
  "version": "0.0.1",
  "author": "Talin",
  "license": "MIT",
  "description": "A UI component library that works with Solid SSR",
  "scripts": {
    "build": "npm run build:svg && npm run build:mjs && npm run build:cjs",
    "build:cjs": "tsc --project tsconfig.src.json --outDir ./dist/cjs --module CommonJS",
    "build:mjs": "tsc --project tsconfig.src.json --outDir ./dist/mjs --module ESNext",
    "build:svg": "svgr --template ./scripts/svg-template.cjs --typescript iconsrc/ -d src/icons/",
    "clean": "rimraf ./dist",
    "format": "prettier --write .",
    "test:compile": "tsc --noEmit --project ./tsconfig.json"
  },
  "type": "module",
  "source": "src/index.tsx",
  "main": "./dist/cjs/index.jsx",
  "module": "./dist/mjs/index.jsx",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "solid": "./dist/mjs/index.jsx",
      "types": "./dist/mjs/index.d.js",
      "import": "./dist/mjs/index.jsx",
      "default": "./dist/mjs/index.jsx",
      "browser": "./dist/cjs/index.jsx",
      "require": "./dist/cjs/index.jsx",
      "node": "./dist/cjs/index.jsx"
    },
    "./icons": {
      "source": "./src/icons/index.ts",
      "types": "./dist/mjs/icons/index.d.js",
      "default": "./dist/mjs/icons/index.js",
      "import": "./dist/mjs/icons/index.js",
      "require": "./dist/cjs/icons/index.js",
      "browser": "./dist/cjs/icons/index.js",
      "solid": "./dist/mjs/icons/index.js"
    }
  },
  "dependencies": {
    "@floating-ui/dom": "^1.0.2",
    "colord": "^2.9.3",
    "solid-codex-api": "^0.0.1",
    "solid-js": "^1.5.7"
  },
  "devDependencies": {
    "@stitches/core": "^1.2.8",
    "@svgr/cli": "^6.4.0",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16"
  }
}
