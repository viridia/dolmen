{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "types": ["vite/client"],
    "baseUrl": "./",
    // "strict": true, // Solid-start is not strict compliant
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"],
      // For development
      "dolmen": ["./packages/dolmen/src"],
      "solid-codex": ["./packages/solid-codex/src"],
      "solid-codex-api": ["./packages/solid-codex-api/src"],
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
}
